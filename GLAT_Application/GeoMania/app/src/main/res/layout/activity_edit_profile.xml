<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lasser.play.geomania.EditProfile">

    <EditText
        android:id="@+id/editName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="My Name"
        android:textColor="#2962ff"
        android:textAlignment="center"
        android:layout_below="@+id/imageView_profile_pic"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/imageView_profile_pic"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="changeProfilePic"
        android:src="@drawable/profile_icon" />

    <ImageButton
        android:id="@+id/sumbitButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#64dd17"
        android:layout_below="@+id/editName"
        android:layout_centerHorizontal="true"
        android:src="@drawable/profile_icon" />

</RelativeLayout>
