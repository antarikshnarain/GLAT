<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="50dp"
    android:background="#ffe3a0"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/imageView_from_usericon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/ic_launcher" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView3"
        android:background="#ffcb8a"
        android:layout_below="@+id/textView_from_user"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/imageView_from_usericon"
        android:layout_above="@+id/textView_from_timestamp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView_from_message"
                android:paddingLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:text="Message From" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/textView_from_user"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="User"
        android:background="#ffb05f"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_toEndOf="@+id/imageView_from_usericon" />

    <TextView
        android:id="@+id/textView_from_timestamp"
        android:layout_width="match_parent"
        android:background="#ffcb8a"
        android:layout_height="wrap_content"
        android:text="TimeStamp"
        android:layout_below="@+id/imageView_from_usericon"
        android:layout_alignParentStart="true" />

</RelativeLayout>